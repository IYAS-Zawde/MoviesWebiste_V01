@model MoviesWebiste_V01.movie
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <div class="container" id="movieDetials">
        <h2 id="movieName"> @Model.name </h2>
        <div class="col-sm-3 d-flex justify-content-center" id="moviePicture">
            <img src="@Url.Content("~/images/movieIcon.png")" alt="@Model.name icon" class="img-fluid img-thumbnail">
            <button class="d-block btn btn-info" onclick="@Model.download_url">Download</button>
        </div>
        <div class="col-sm-9" id="movieInfo">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Name</th>
                        <td>@Model.name</td>
                    </tr>
                    <tr>
                        <th scope="row">Overview</th>
                        <td>@Model.overview</td>
                    </tr>
                    <tr>
                        <th scope="row">Director</th>
                        <td>@ViewBag.directorName</td>
                    </tr>
                    <tr>
                        <th scope="row">Cast</th>
                        <td>@ViewBag.cast</td>
                    </tr>
                    <tr>
                        <th scope="row">Gender</th>
                        <td>@ViewBag.categories</td>
                    </tr>
                    <tr>
                        <th scope="row">Rating</th>
                        <td>@ViewBag.rating_avg</td>
                    </tr>
                    <tr>
                        <th scope="row">Price</th>
                        <td>@Model.price $</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="container" id="RateComment">
        <div class="container" id="userRateComment">
            add your Rating and Comment
        </div>
        <div class="container" id="otherComments">
            @foreach (var item in ViewBag.Ratings_Comments)
            {
                <div class="card border border-dark rounded">
                    <div class="card-body">
                        <h5 class="card-title"><b>@item.customerName</b></h5>
                        <p class="card-text">@item.comment</p>
                    </div>
                </div>
            }
            
        </div>
    </div>
   
</div>